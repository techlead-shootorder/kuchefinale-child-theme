{
  "name": "kuchefinale-theme",
  "version": "1.0.0",
  "description": "WordPress theme for Kuchefinale with Tailwind CSS",
  "scripts": {
    "dev": "tailwindcss -i ./assets/css/src/input.css -o ./assets/css/style.css --watch",
    "build": "tailwindcss -i ./assets/css/src/input.css -o ./assets/css/style.css --minify",
    "build-watch": "npm run build -- --watch"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@tailwindcss/aspect-ratio": "^0.4.2"
  },
  "keywords": [
    "wordpress",
    "theme",
    "tailwindcss",
    "kuchefinale"
  ],
  "author": "Kuchefinale Team",
  "license": "GPL-2.0"
}